<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:task="http://www.springframework.org/schema/task"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<task:executor id="myexecutor" pool-size="50" queue-capacity="200" keep-alive="5"/>
	<task:annotation-driven executor="myexecutor" />
	<context:annotation-config></context:annotation-config>
	<!-- 引入属性文件 -->
	<context:property-placeholder location="classpath:config.properties" />

	<!-- 自动扫描(自动注入),service和Dao的注解，平台使用的jar中的路径是com.tintinloan，开发自定义的是在com.oams下，所以路径写成com-->
	<context:component-scan base-package="com.tintinloan">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Service" />
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Repository" />
	</context:component-scan>
	<!-- 配置VO之间映射使用的bean -->
	<bean id="mapper" class="org.dozer.spring.DozerBeanMapperFactoryBean">
		<property name="mappingFiles">
			<list>
				<value>classpath*:dozer-config/dozerBeanMapping.xml</value>
			</list>
		</property>
	</bean>
	
	
	<!-- 引入xml文件
  	<import resource="classpath*:spring-quartz.xml" /> 
  	<import resource="classpath*:spring-scheduled.xml" />  
  	 --> 
</beans>